
// config/database.js
require('dotenv').config();
const { Pool } = require('pg');
const config = require('./config');

const pool = new Pool({
  user: config.dbUser,
  password: config.dbPassword,
  host: config.dbHost,
  port: config.dbPort,
  database: config.dbName,
  ssl: config.dbSSL === 'true ? { rejectUnauthorized: false } : false,
});

pool.on('connect', () => {
  console.log(' âœ… Connected to the PostgreSQL database');
});

module.exports = pool;

